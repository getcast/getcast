<h1 class="big-title">All podcasts</h1>

<form method="get">
	<div class="search-bar">
		<input type="search" id="search" name="search" placeholder="Buscar..." autocomplete="on" autosave>
		<button class="icon"><span class="fa fa-search rotate"></span></button>
	</div>
</form>

<% if podcasts.any? %>
	<div id="podcasts">
		<% podcasts.take(1000).each do |podcast| %>
			<div class="podcast">
				<h2><a href = "<%= Web.routes.path(:show, id: podcast.id) %>"><%= podcast.title %></a></h2>
				<p><a href="<%= podcast.url %>"><%= podcast.url %></a></p>
				<p><%= podcast.description %></p>
			</div>
		<% end %>
	</div>
<% else %>
	<p class="placeholder">There are no podcasts yet.</p>
<% end %>
