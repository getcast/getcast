<% if podcast.image_url %>
<section id="podcast" style="background-image: url(<%= podcast.image_url %>);">
<% else %>
<section id="podcast" style="background-color: <%= random_color %>;">
<% end %>
	<% if podcast.title %>
		<header id="podcast-header">
			<h2><%= podcast.title %></h2>
		</header>
	<% end %>

	<% if podcast.desc %>
		<p><%= podcast.desc %></p>
	<% end %>

	<% if episodes %>
		<div id="episodes">
			<% episodes.each do |episode| %>
				<div class="episode-container">
					<% if episode.title %>
						<h4><%= episode.title %></h3>
					<% end %>
					<% if episode.desc %>
						<p><%= episode.desc %></h3>
					<% end %>
					<% if episode.media_url %>
						<a href="<%= episode.media_url %>">Listen!</a>
					<% end %>
				</div>
			<% end %>
		</div>
	<% end %>
</section>